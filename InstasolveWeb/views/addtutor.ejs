          <form role="form">
              <!-- STEP 1 -->
              <div class="row setup-content" id="step-1">
                  <div class="col-xs-12">
                      <div class="col-md-12">
                          <h3> Step 1: Tutor Information</h3>
                          <div class="form-group">
                              <label class="control-label">Email</label>
                              <input  maxlength="100" type="text" required="required" class="email-input form-control" placeholder="Enter Email:"  />
                          </div>
                          <!-- <div class="form-group">
                              <label class="control-label">Password</label>
                              <input maxlength="100" type="text" required="required" class="form-control" placeholder="Enter Password:" />
                          </div> -->
                          <div class="form-group">
                            <label class="control-label">Categories</label>
                            <select class="multiple-selection form-control" name="states[]" multiple="multiple">
                                <optgroup label="Computer Science">
                                <option value="C">C</option>
                                <option value="PY">Python</option>
                                <option value="SIF">Scale invariance feature</option>
                                    <optgroup label="HS Math">
                                <option value="C&V">Calculus and Vectors</option>
                                <option value="DM">Data Management</option>
                                <option value="FOM">Foundations of Math</option>
                                <option value="F">Functions</option>
                                        <optgroup label="Math">
                                <option value="AC">Advanced Calculus</option>
                                <option value="ALA">Advanced Linear Algebra</option>
                                <option value="BC">Basic Calculus</option>
                                <option value="LA">Linear Algebra</option>
                                <option value="ODE">Ordinary Differential Equations</option>
                            </select>
                          </div>
                          <button class="pass-categories btn btn-primary nextBtn btn-lg pull-right" type="button">Next</button>
                      </div>
                  </div>
              </div>
              <!-- STEP 2 -->
              <div class="row setup-content" id="step-2">
                  <div class="col-xs-12">
                      <div class="col-md-12">
                          <h3> Step 2: Comfirmation</h3>
                          <div class="form-group">
                              <label class="email-comfirm control-label">
