                          <div class="form-group">
                              <label class="control-label">Password: 123456</label>
                              <!-- <input maxlength="200" type="text" required="required" class="form-control" placeholder="Enter Company Address"  /> -->
                          </div>
                          <div class="form-group">
                              <label class="control-label">Categories: </label>
                              <ul id="selectedTags"></ul>
                              <!-- <p id="selectedTags"></p>  -->
                              <!-- <input maxlength="200" type="text" required="required" class="form-control" placeholder="Enter Company Address"  /> -->
                          </div>
                          <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" onclick="tutorRegister()">Confirm</button>
                      </div>
                  </div>
              </div>
              <!-- STEP 3 -->
              <div class="row setup-content" id="step-3">
                  <div class="col-xs-12">
                      <div class="col-md-12">
                          <h3> Step 3: Status</h3>
                          <div class="form-group">
                              <label class="addtutor-status control-label">
